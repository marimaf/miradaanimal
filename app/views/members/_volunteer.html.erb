<%= form_for(@member, :html => {:id => 'form'} ) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2>Tuvimos un error:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-8 col-md-offset-2">
  <div class="field">
    <%= f.label :nombre %><font color="red">*</font><br />
    <%= f.text_field :name,  :required=>"true",  :class=>"form-control required" %>
  </div>
  <div class="field">
    <%= f.label :email %><font color="red">*</font><br />
    <%= f.text_field :email,  :required=>"true",  :class=>"form-control required", :type => "email"  %>
  </div>
  <div class="field">
    <%= f.label :rut %><font color="red">*</font><br />
    <%= f.text_field :rut,  :required=>"true",  :class=>"form-control required" %>
  </div>
  <div class="field">
    
    <%= f.check_box :volunteer, {:checked=>true, :hidden => true},  :class=>"form-control" %> 
  </div>
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :phone,  :class=>"form-control" %>
  </div>
  <div class="field"><br/>
    <%= f.check_box :car %> <%= f.label "Cuentas con un auto para el operativo" %>
  </div>
  <div class="field">
    <%= f.label :occupation %><br />
    <%= f.text_field :occupation,  :class=>"form-control" %>
  </div>
  <br/>
  IMPORTANTE EN CASO DE EMERGENCIA CONTACTAR A:
  <div class="field">
    <%= f.label :emergency_contact_name %><font color="red">*</font><br />
    <%= f.text_field :emergency_contact_name,  :class=>"form-control required" %>
  </div>
  <div class="field">
    <%= f.label :emergency_contact_phone %><font color="red">*</font><br />
    <%= f.text_field :emergency_contact_phone,  :class=>"form-control required" %>
  </div>
  <div class="field">
    <%= f.label "Tienes algÃºn problema de salud o alergia:" %><br />
    <%= f.text_field :health,  :class=>"form-control" %>
  </div>
  <!--div class="field">
    <%= f.label :frequent_donor %><br />
    <%= f.text_field :frequent_donor %>
  </div-->
  <br/>
  <div class="actions text-center">
    <%= f.submit 'Enviar',  :class=>"btn btn-primary " %><br/><br/>
  </div>
  </div>
<% end %>
